{
  "private": true,
  "name": "bullet",
  "author": "fengshangwuqi <fengshangwuqi@gmail.com>",
  "keywords": [
    "package"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "test": "jest --coverage",
    "generate": "ts-node script.ts",
    "ncu": "ncu -u && lerna exec -- ncu -u",
    "pkg:clean": "lerna exec rimraf dist",
    "pkg:add": "ts-node packages/pkgkit/bin/pkgkit.js add",
    "pkg:build": "lerna run prepare && lerna exec pkgkit build",
    "pkg:r": "lerna version patch --no-commit-hooks --yes"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn test && tsc",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist",
      "typings"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@babel/preset-env": "7.12.1",
    "@types/fs-extra": "9.0.2",
    "@types/jest": "26.0.15",
    "chalk": "4.1.0",
    "fs-extra": "9.0.1",
    "jest": "26.6.1",
    "lerna": "3.22.1"
  },
  "license": "MIT"
}
