{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "command": {
    "version": {
      "exact": true,
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    }
  }
}
